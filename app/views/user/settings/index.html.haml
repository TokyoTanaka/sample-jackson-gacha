%main.bg-light.settings-outer
  .max-width-980
    .settings-inner
      .settings-nav
        .settings-sidebar
          %h1 アカウント設定
          %nav.settings-sidebar-nav
            %ul.settings-sidebar-list
              %li.settings-sidebar-item.active
                %a.settings-sidebar-link{:href => '#'}
                  アカウント
              %li.settings-sidebar-item
                %a.settings-sidebar-link{:href => '#'}
                  リアクション
              %li.settings-sidebar-item
                %a.settings-sidebar-link{:href => '#'}
                  通知
              %li.settings-sidebar-item
                %a.settings-sidebar-link{:href => '#'}
                  カード情報
              %li.settings-sidebar-item
                %a.settings-sidebar-link{:href => '#'}
                  プレミアム
      .settings-main.bg-white
        .settings-account
          .row
            .col-md-3
              .account-sidebar
                %ul.account-sidebar-list
                  %li.account-sidebar-item
                    %a.account-sidebar-link{:href => '#'}
                      基本情報
                  %li.account-sidebar-item
                    %a.account-sidebar-link{:href => '#'}
                      ソーシャル連携
                  %li.account-sidebar-item
                    %a.account-sidebar-link{:href => '#'}
                      ユーザー設定
            .col-md-9
              .account-wrapper.account-basic
                .row.mb-2
                  .col-12.col-md-6
                    %label.form-label.form-text
                      アカウント名(Name)
                    %a.ms-2.edit-btn{:href => "#"}
                      編集
                    %input.form-control{:placeholder => "田中又暉"}
                .row.mb-2
                  .col-12.col-md-6
                    %label.form-label.form-text
                      ユーザー名(Username)
                    %a.ms-2.edit-btn{:href => "#"}
                      編集
                    %input.form-control{:placeholder => "papapazzi"}
                .row.mb-2
                  .col-12.col-md-6
                    %label.form-label.form-text
                      メールアドレス(email)
                    %a.ms-2.edit-btn{:href => "#"}
                      編集
                    %input.form-control{:placeholder => "info@ohmylike.jp"}
                .row.mb-2
                  .col-12.col-md-6
                    %label.form-label.form-text
                      パスワード(password)
                    %a.ms-2.edit-btn{:href => "#"}
                      編集
                    .form-control.border-0.p-0
